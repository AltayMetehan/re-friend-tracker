{
	"name": "Node.js & TypeScript",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"forwardPorts": [
		3000,
		3001,
		8080
	],
	"postCreateCommand": [
		"npm install > /tmp/postCreateCommand.log 2>&1"
	],
	"postStartCommand": [
		"npm run start > /tmp/postStartCommand1.log 2>&1",
		"npm run watch > /tmp/postStartCommand2.log 2>&1"
	],
	"customizations": {
		"codespaces": {
			"openFiles": [
				"app/model.json"
			]
		},
		"vscode": {
			"extensions": [
				"microsoft.simple-browser"
			]
		}
	}
}