{
	"name": "Node.js & TypeScript",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
	"forwardPorts": [
		3000,
		3001,
		8080
	],
	"postCreateCommand": "npm install && npm install -g pm2",
	"postStartCommand": "npm run start",
	"customizations": {
		"codespaces": {
			"openFiles": [
				"app/model.json"
			]
		},
		"vscode": {
			"extensions": [
				"microsoft.simple-browser"
			]
		}
	}
}